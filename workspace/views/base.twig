{% if not is_ajax %}
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{{ title }}</title>

        <link rel="stylesheet" href="/public/theme/styles.css?v=0.0.1" />
        <script src="/public/theme/libs.min.js?v=0.0.1" defer></script>
        <script src="/public/theme/scripts.min.js?v=0.0.1" defer></script>
    </head>
    <body>
{% endif %}

    {% include "scaffold/header.html" %}
    {% include "scaffold/menu.html" %}

    <div class="wrapper" id="wrapper">
        <main id="content" class="content">
            <article {% if title is same as ('404') %} data-not-found {% endif %} data-page data-title="{{title}}">
                {% for module in modules %}
                    {% include 'modules/m_'~module.type~'.html' with module %}
                {% endfor %}
            </article>
            {% include "scaffold/dev-grid.html" %}
        </main>

        {% include 'scaffold/newsletter.html' %}
        {% include 'scaffold/footer.html' %}
        {% include 'scaffold/offscreen.html' %}

    </div>

    [[templates]]

{% if not is_ajax %}
    </body>
    </html>
{% endif %}