{
  "table": "topics",
  "label": {
    "page": "Topics",
    "edit": "{% if not label %}New topic{% else %}Topic: <em>{{label}}</em>{% endif %}"
  },
  "data": {
    "chat_gpt": {
      "lead": "One sentence, max 200 chars, about topic covering {{label}} policy during Obama presidency.",
      "text": "Describe {{label}} policy during presidency of Barack Obama in 3-4 paragraphs. Do not use point marks. Do not summarize."
    }
  },
  "model": {
    "label": "{{label}}"
  },
  "buttons_edit": [
    {
      "type": "plugin",
      "plugin": "preview",
      "params": {
        "url": "/topics/{{slug}}?preview=true"
      }
    }
  ],
  "buttons_page": [
    {
      "type": "plugn",
      "plugin": "import"
    },
    {
      "type": "plugin",
      "plugin": "refresh"
    }
  ],
  "order": "label",
  "fields": [
    {
      "tab": "Info",
      "label": "Name",
      "list": true,
      "field": "label",
      "required": true
    },
    {
      "hr": true,
      "label": "Topic Color",
      "field": "color",
      "type": "select"
    },
    {
      "label": "Illustration",
      "field": "illustration",
      "type": "select",
      "source": {
        "model": "interview_illustrations_all"
      },
      "list": {
        "position_after": "label",
        "height": 140,
        "src_blank": "blank.png"
      }
    },

    {
      "hr": true,
      "label": "Url",
      "field": "slug",
      "on_demand": true,
      "auto": {
        "on_null": true,
        "unique": true,
        "url": true,
        "pattern": "{{label}}"
      }
    },
    {
      "label": "Interviews count",
      "field": "count_interviews",
      "edit": false,
      "list": true
    },
    {
      "label": "Publish",
      "field": "active",
      "type": "boolean",
      "list": "edit"
    }
  ]
}