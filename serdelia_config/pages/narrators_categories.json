{
    "table": "narrators_categories",
    "label": {
        "page": "Narrators Categories",
        "edit": "{% if not label %}New Narrator Category{% else %}Narrator Category: <em>{{label}}</em>{% endif %}"
    },
    
    "model": {
        "label": "{{label}}"
    },
    "buttons_page":
    [
        {"plugin":"refresh","hidden":true}
    ],
    "order": "label",
    "fields": [
        {
            "label": "Label",
            "list": true,
            "field": "label"
        },
        {
            "label": "Url",
            "field": "slug",
            "list":true,
            "on_demand": true,
            "auto": {
                "on_null": true,
                "unique": true,
                "url": true,
                "pattern": "{{label}}"
            }
        }
    ]
}