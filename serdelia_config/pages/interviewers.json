{
    "table": "interviewers",
    "label": {
        "page": "Interviewers (Collections)",
        "edit": "{% if not last_name %}New person{% else %}Interviewers: <em>{{first_name}} {{last_name}}</em>{% endif %}"
    },
    "layout": {
        "type": "grid",
        "count": 100,
        "html": "{{html.image|raw}}<br>{{html.first_name}} <b>{{html.last_name}}</b><div style='float:right'>{{html.active|raw}}</div><br><span class='badge badge-secondary'>{{html.amount}}</span>"
    },
    "model": {
        "label": "{{last_name}}, {{first_name}}"
    },
    "buttons_edit":
    [
        {"label":"Storytelling","type":"page","icon":"history-edu","page":"collection_modules,%id%"},
        {"label":"Excerpts on Map","type":"page","icon":"history-edu","page":"map_excerpts,%id%"},
        {"label":"Illustrations","type":"page","icon":"image","page":"interview_illustrations,%id%"},
        {"type":"plugin","plugin":"preview","params":{"url":"/about/{{slug}}?preview=true"  }},
        {"type":"plugin","plugin":"interviewer_update","label":"Update" }
    ],
    "buttons_page":
    [
        {"plugin":"refresh"}
    ],
    "order": "last_name,first_name",
    
    "fields": [
        {
            "tab": "Info",
            "label": "First name",
            "list": true,
            "field": "first_name",
            "required": true
        },
        {
            "label": "Last name",
            "list": true,
            "field": "last_name",
            "required": true
        },
        {
            "field":"label",
            "edit":false,
            "hidden":true,
            "auto": {
                "pattern": "{{first_name}} {{last_name}}"
            }
        },
        {
            "label": "Collection Theme (color)",
            "field": "color",
            "type": "select"
        },
        {
            "label": "Interviews Amount",
            "field": "amount",            
            "edit":false,
            "list":true
        },
        
        {
            "label": "Url",
            "field": "slug",
            "on_demand": true,
            "auto": {
                "on_null": true,
                "unique": true,
                "url": true,
                "pattern": "{{first_name}} {{last_name}}"
            }
        },
        {
            "label": "Publish",
            "field": "active",
            "type": "boolean",
            "list": "edit",
            "hr": true
        },
        {
            "tab": "Texts",
            "field": "lead",
            "type": "text",
            "label": "Lead",
            "settings": {
                "rows": 5
            }
        },
        {
            "field": "locations",
            "type": "text",
            "label": "Locations",
            "settings": {
                "rows": 3
            }
        },
        {
            "field": "text",
            "type": "html",
            "label": "Copy"
        },
        
        {
            "field": "uid",
            "type": "uid",
            "list": "read"
        },
        {
            "tab":"Image",
            "label": "Cover",
            "type": "image",
            "field": "image",
            "settings":{"webp":true},
            "folder": "/public/upload/interviewers",
            
            "list": {
                "height": 140,
                "folder": "desktop_x2",
                "temp-layout": "cover",
                "src_blank": "blank.png"
            },
            "filename": "%uid%",
            "images": [
                {
                    "folder": "original",
                    "label": "Original image"
                },
                {
                    "folder": "desktop",
                    "label": "Desktop",
                    "width": 969,
                    "height": 969,
                    "crop": true,
                    "retina": true
                },
                {
                    "folder": "mobile",
                    "label": "Mobile",
                    "width": 375,
                    "height": 375,
                    "crop": true,
                    "retina": true
                },
                {
                    "folder": "big",
                    "label": "Big Tile",
                    "width": 1346,
                    "height": 1346,
                    "crop": true,
                    "retina": true
                }
            ]
        },
        {
            "field":"alt","label":"ALT"
        },

        {
            "field": "image_author",
            "label": "Photo author"
        }
    ]
}