{
    "table": "sessions",
    "filters": {
        "parent": "%1%"
    },
    "label": {
        "page": "Sessions",
        "edit": "{% if not nr %}New session{% else %}Session: <em>{{parent.label}}, #{{nr}}</em>{% endif %}"
    },
    "layout-temp":
    {
        "type":"grid",
        "count":100,
        "html":"{{html.image|raw}}<b>{{html.parent}}</b><br>Session# {{html.nr}}<br>{{html.date}} {{html.active|raw}}<br><small><code>{{html.incite_id}}</code></small>"
    },
    "order": "nr",
    "buttons_edit": [        
        {
            "label":"Helper",
            "plugin":"session_update",
            "on_update":true,
            "temp-hidden":true
        },
        {
            "type": "plugin",
            "plugin": "preview",
            "params": {
                "url": "/interviews/{{parent.slug}}?preview=true"
            }
        }
    ],
    "fields": [
        {
            "tab":"Info",
            "label": "Session nr",
            "list": true,
            "field": "nr",
            "required": true
        },
        {
            "label": "Session date",
            "list": true,
            "field": "date",
            "required": true,
            "type": "date"
        },
        
        {
            "label":"Incite Session Id",
            "field":"incite_id",
            "temp-list":true,
            "settings":{"code":true}
        },
        {
            "field":"narrator_location",
            "label":"Location (narrator)",
            "list":true
        },
        {
            "field":"narrator_state",
            "label":"Location (narrator) State",
            "type":"select",
            "source":
            {
                "model":"s_states"
            }
        },
        {
            "field":"interviewer_location",
            "label":"Location (interviewer)",
            "list":true
        },
        {
            "field":"parent","type":"select",
            "hidden":true,
            "label":"Interview",
            "edit":false,
            "source":
            {
                "model":"interviews_list"
            }
        },
        {
            "field": "uid",
            "type": "uid",
            "list": "read"
        },
        
        {
            "label":"Languages","type":"checkboxes",
            "field":"languages",
            "source":
            {
                "model":"s_languages"
            }
        },
        {
            "label": "Publish",
            "field": "active",
            "type": "boolean",
            "list": "edit",
            "hr": true
        },
        
        {
            "tab":"Media",
            "field": "audio",
            "label": "Audio file (MP3)",
            "type": "file",
            "extension":"mp3",
            "folder":"/public/upload/sessions/audio"
        },
        {
            "field":"duration",
            "label":"Duration (seconds)",
            "help":"Clear this field to read duration from from MP3 file"
        },        
        {
            "field":"filename","label":"WAV filename","hidden":true
        },
        
        
        {
            "tab":"Transcript",
            "field":"transcript",
            "type":"text",            
            "edit":false,            
            "label":"Transcript data",
            "settings":{"style":"json","wide":true,"rows":20}
        },
        {
            "field": "doc",
            "label": "DOCX Transcript file",
            "type": "file",
            "extension":"docx",
            "folder":"/public/upload/sessions/transcripts"
        }
    ]
}