{
  "table": "map_excerpts",
  "filters": {
    "parent": "%1%"
  },
  "label":
  {
    "page":"Map Excerpts",
    "edit":"{% if not label %}New Map Excerpt{% else %}Excerpt: <em>{{label}}</em>{% endif %}"
  },
  "layouts":
  [
    {
      "type":"list"
    }
  ],
  "fields": [
    {
      "label": "Interview",
      "field": "interview",
      "type": "select",
      "source": {
        "model": "interviews"
      }
    },
    {
      "label": "Location",
      "field": "location",
      "type": "select",
      "source": {
        "model": "map_locations"
      }
    },
    {
      "hr": true,
      "label": "Time Start",
      "field": "time_start"
    },
    {
      "label": "Time End",
      "field": "time_end"
    },
    {
      "hr": true,
      "label": "Excerpt Text",
      "field": "excerpt_text",
      "type": "text",
      "settings": {
        "rows": 4
      }
    },
    {
      "hr": true,
      "field": "active",
      "type": "boolean",
      "label": "Active",
      "list": "edit"
    }
  ]
}