{
    "table": "sessions",
    "disable":["add"],
    "label": {
        "page": "All Sessions",
        "edit": "{% if not nr %}New session{% else %}Session: <em>{{parent.name}} {{parent.surname}}, #{{nr}}</em>{% endif %}"
    },
    "layout-temp":
    {
        "type":"grid",
        "count":100,
        "html":"{{html.image|raw}}<b>{{html.parent}}</b><br>Session# {{html.nr}}<br>{{html.date}} {{html.active|raw}}<br><small><code>{{html.incite_id}}</code></small>"
    },
    "order": "label_sort",
    "buttons_page":
    [
        {
            "label":"Update Index",
            "icon":"index",
            "hidden":true,
            "plugin":"interviews_update"
        },
        {
            "label":"Check all",
            "icon":"index",
            "plugin":"sessions_check"
        },
        {"plugin":"refresh"}
    ],
    "buttons_edit": [        
        {
            "label":"Helper",
            "plugin":"session_update",
            "on_update":true,
            "temp-hidden":true,
            "type":"plugin"
        },
        {
            "label":"Doc2Txt",
            "plugin":"api_single",            
            "type":"plugin",
            "icon":"refresh",
            "params":{
                "url":"/api/session_import?session={{id}}"
            }
        },
        {
            "type": "plugin",
            "plugin": "preview",
            "params": {
                "url": "/interviews/{{parent.slug}}?preview=true"
            }
        }
    ],
    "fields": [
        {
            "tab":"Session",
            "field":"label",
            "label":"Session Name"            
        },
        {
            "field":"label_sort",
            "label":"Session Name",
            "list":true,
            "search":true,
            "hidden":true
        },
        {
            "field":"parent","type":"select",
            "label":"Interview",
            
            "edit":false,
            "source":
            {
                "model":"interviews_list",
                "model_fields":["label_sort"]
            }
        },
        {
            
            "label": "Session nr",
            "list": true,
            "field": "nr",
            "required": true
        },
        {
            "label": "Session date",
            
            "field": "date",
            "required": true,
            "type": "date"
        },
        
        {
            "label":"Incite Session Id",
            "field":"incite_id",
            "list":true,
            "settings":{"case":true,"code":true},
            "search":true
        },
        {
            "field":"narrator_location",
            "label":"Location (narrator)"
        },
        {
            "field":"narrator_state","label":"Narrators state",
            "type":"select",
            "source":
            {
                "model":"s_states"
            }
        },
        {
            "field":"interviewer_location",
            "label":"Location (interviewer)"
        },
        
        {
            "field": "uid",
            "type": "uid",
            "list": true
        },
        {
            "label": "Screenshot",
            "hr": true,
            "type": "image",
            "temp-list":true,
            "field": "image",
            "folder": "/public/upload/sessions",
            "folder_preview": "thumb",
            "filename": "%uid%",
            "images": [
                {
                    "folder": "original",
                    "label": "Original image"
                },
                {
                    "folder": "desktop",
                    "label": "Resized image",
                    "width": 640,
                    "height": 360,
                    "crop": true,
                    "retina": true
                },
                {
                    "folder": "mobile",
                    "label": "Resized image",
                    "width": 320,
                    "height": 180,
                    "crop": true,
                    "retina": true
                }
            ]
        },
        {
            "label":"Languages","type":"checkboxes",
            "field":"languages",
            "source":
            {
                "model":"s_languages"
            }
        },
        {
            "hr": true,
            "label":"Status (media)",
            "field":"status_media",
            "type":"boolean",
            "list":true,
            "search":true
        },
        {
            "label":"Status (transcript)",
            "field":"status_transcript",
            "type":"boolean",
            "list":true,
            "search":true
        },
        {
            "label": "Publish",
            "field": "active",
            "type": "boolean",
            "list": "edit",
            "hr": true,"search":true
        },
        {
            "tab":"Media","field":"media","type":"select",
            "label":"Media type"
        },
        {
            "field":"duration",
            "label":"Duration (seconds)"
        },
        {
            "field":"mp3_size","label":"MP3 size"
        },
        {
            "header":"Video",
            "field": "vimeo_id",
            "label": "Vimeo ID",
            "settings":{"code":true},
            "hr": true
        },
        
        {
            "field": "vimeo_source",
            "label": "Vimeo Source",
            "type": "json"
        },
        {
            "field": "subtitles",
            "label": "Subtitles (VTT)",
            "type": "file",
            "extension":"vtt",
            "folder":"/public/upload/sessions/subtitles"
        },
        {
            "header":"Audio",
            "hr":true,
            "field": "audio",
            "label": "Audio file (MP3)",
            "type": "file",
            "extension":"mp3",
            "folder":"/public/upload/sessions/audio"
        },
        {
            "field":"filename_mp3","label":"MP3 filename"
        },
        
        
        
        {
            "tab":"Transcript",
            "field":"transcript",
            "type":"text",
            "edit":false,            
            "label":"Transcript data",
            "settings":{"style":"json","wide":true,"rows":20}
        },
        {
            "field":"filename_docx","label":"DOCX filename","edit":false
        },
        {
            "field": "doc",
            "label": "DOCX Transcript file",
            "type": "file",
            "extension":"docx",            
            "folder":"/public/upload/sessions/transcripts"
        },
        {
            "tab":"Transcript with Tags",
            "field":"transcript_tags",
            "edit":false,
            "type":"text",
            "label":"Transcript data with Tags",
            "settings":{"style":"json","wide":true,"rows":20}
        }
    ]
}