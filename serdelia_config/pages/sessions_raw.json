{
    "table": "sessions",
    
    "label": {
        "page": "Sessions",
        "edit": "{% if not nr %}New session{% else %}Session: <em>{{parent.name}} {{parent.surname}}, #{{nr}}</em>{% endif %}"
    },
    "layout":
    {
        "type":"grid",
        "count":100,
        "html":"{{html.image|raw}}<b>{{html.parent}}</b><br>Session# {{html.nr}}<br>{{html.date}} {{html.active|raw}}<br><small><code>{{html.incite_id}}</code></small>"
    },
    "filters":{
        
        "transcript_tags":{"operator":"!=","value":""}
    },
    "order": "!id",
    "buttons_page":
    [
        {"plugin":"refresh"}
    ],
    "buttons_edit": [
        {
            "type":"plugin",
            "plugin": "import_cover",
            "label": "Import from Vimeo",
            "params": {
                
                "type": "vimeo",
                "field_mp4": "vimeo_source",
                "field_poster": "image",
                "field_vimeo": "vimeo_id",
                "field_duration":"duration",
                "field_vtt":"subtitles"
            }
        },
        {
            "plugin":"api_single",
            "type":"plugin",
            "label":"Transcript",
            "icon":"refresh",
            "params":{
                "url":"/api/interview_import?type=cms&session={{id}}"
            }
        },
        {
            "label":"Helper",
            "plugin":"session_update",
            "on_update":true,
            "hidden":true
        },
        {
            "type": "plugin",
            "plugin": "preview",
            "params": {
                "url": "/interviews/{{parent.slug}}?preview=true"
            }
        }
    ],
    "fields": [
        {
            "tab":"Info",
            "label": "Session nr",
            "list": true,
            "field": "nr",
            "required": true
        },
        {
            "label": "Session date",
            "list": true,
            "field": "date",
            "required": true,
            "type": "date"
        },
        {
            "field":"interviewer","label":"Interviewer","type":"select",
            "source":
            {
                "model":"staff","list":true
            }
        },
        {
            "label":"Incite Session Id",
            "field":"incite_id",
            "list":true,
            "settings":{"code":true}
        },
        {
            "field":"narrator_location",
            "label":"Location (narrator)"
        },
        {
            "field":"interviewer_location",
            "label":"Location (interviewer)"
        },
        {
            "field":"parent","type":"select","hidden":true,
            "edit":false,
            "source":
            {
                "model":"interviews"
            },
            "list":true
        },
        {
            "field": "uid",
            "type": "uid",
            "list": "read"
        },
        {
            "label": "Screenshot",
            "hr": true,
            "type": "image",
            "list":true,
            "field": "image",
            "folder": "/public/upload/sessions",
            "folder_preview": "thumb",
            "filename": "%uid%",
            "images": [
                {
                    "folder": "original",
                    "label": "Original image"
                },
                {
                    "folder": "desktop",
                    "label": "Resized image",
                    "width": 640,
                    "height": 360,
                    "crop": true,
                    "retina": true
                },
                {
                    "folder": "mobile",
                    "label": "Resized image",
                    "width": 320,
                    "height": 180,
                    "crop": true,
                    "retina": true
                }
            ]
        },
        {
            "tab":"Video",
            "field": "vimeo_id",
            "label": "Vimeo ID",
            "settings":{"code":true},
            "hr": true
        },
        {
            "field":"duration",
            "label":"Duration (seconds)"
        },
        {
            "field": "vimeo_source",
            "label": "Vimeo Source",
            "type": "json"
        },
        {
            "field": "subtitles",
            "label": "Subtitles (VTT)",
            "type": "file",
            "extension":"vtt",
            "folder":"/public/upload/sessions/subtitles"
        },
        
        {
            "label": "Publish",
            "field": "active",
            "type": "boolean",
            "search":true,
            "list": "edit",
            "hr": true
        },
        {
            "tab":"Transcript",
            "field":"transcript",
            "type":"text",
            "edit":false,            
            "label":"Transcript data",
            "settings":{"style":"json","wide":true,"rows":20}
        },
        {
            "field": "doc",
            "label": "DOCX Transcript file",
            "type": "file",
            "extension":"docx",
            "folder":"/public/upload/sessions/transcripts"
        },
        {
            "tab":"Transcript with Tags",
            "field":"transcript_tags",
            "edit":false,
            "type":"text",
            "label":"Transcript data with Tags",
            "settings":{"style":"json","wide":true,"rows":20}
        }
    ]
}